<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:id="@+id/store_image"
        android:layout_marginLeft="17.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text=""
        android:layout_marginLeft="14dp"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:id="@+id/product_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        android:layout_marginRight="15dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/store_image"/>

    <TextView
        android:id="@+id/sku_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="8dp"
        android:text=""
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@id/bigprice"
        app:layout_constraintLeft_toRightOf="@id/store_image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/store_image"
        android:text=""
        android:textSize="14dp"
        android:layout_marginLeft="14dp"
        android:id="@+id/bigprice"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="34dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/store_image">
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="-"
            android:textSize="16dp"
            android:background="#fff7f7f7"
            android:textColor="@color/grey"
            android:id="@+id/cut"
            app:layout_constraintRight_toLeftOf="@id/number"
            app:layout_constraintTop_toTopOf="@id/label_count"
            app:layout_constraintBottom_toBottomOf="@id/label_count"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:inputType="number"
            android:id="@+id/number"
            android:gravity="center"
            android:background="@null"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@id/label_count"
            app:layout_constraintBottom_toBottomOf="@id/label_count"
            app:layout_constraintRight_toLeftOf="@id/add"/>


        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="+"
            android:textColor="@color/gray"
            android:background="#fff7f7f7"
            android:gravity="center"
            android:id="@+id/add"
            android:textSize="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_count"
            app:layout_constraintBottom_toBottomOf="@id/label_count"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>