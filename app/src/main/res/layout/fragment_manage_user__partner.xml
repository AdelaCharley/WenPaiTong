<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    tools:visibility="visible">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:visibility="visible">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelpartnera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="35dp"
                    android:text="店铺A"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="invisible" />

                <TextView
                    android:id="@+id/count_labela"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff333333"
                    android:textSize="23dp"
                    app:layout_constraintBottom_toBottomOf="@id/labelpartnera"
                    app:layout_constraintRight_toLeftOf="@id/label_count"
                    app:layout_constraintTop_toTopOf="@id/labelpartnera" />

                <TextView
                    android:id="@+id/label_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(数量）"
                    android:textColor="#ff333333"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/labelpartnera"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelpartnera" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lista"
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelpartnera"
                    tools:visibility="gone" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:visibility="gone">

                <TextView
                    android:id="@+id/labelpartnersb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="35dp"
                    android:text="店铺B"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="invisible" />

                <TextView
                    android:id="@+id/count_labelb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff333333"
                    android:textSize="23dp"
                    app:layout_constraintBottom_toBottomOf="@id/labelpartnersb"
                    app:layout_constraintRight_toLeftOf="@id/label_count_b"
                    app:layout_constraintTop_toTopOf="@id/labelpartnersb" />

                <TextView
                    android:id="@+id/label_count_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(数量）"
                    android:textColor="#ff333333"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/labelpartnersb"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelpartnersb" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listb"
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelpartnersb" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelpartnersc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="35dp"
                    android:text="店铺C"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="invisible" />

                <TextView
                    android:id="@+id/count_labelc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="666"
                    android:textColor="#ff333333"
                    android:textSize="23dp"
                    app:layout_constraintBottom_toBottomOf="@id/labelpartnersc"
                    app:layout_constraintRight_toLeftOf="@id/label_count_c"
                    app:layout_constraintTop_toTopOf="@id/labelpartnersc" />

                <TextView
                    android:id="@+id/label_count_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(数量）"
                    android:textColor="#ff333333"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/labelpartnersc"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelpartnersc" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listc"
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelpartnersc" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_partner_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/bg"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/partner_add_count"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/bg"
                    app:layout_constraintLeft_toLeftOf="@id/bg"
                    app:layout_constraintRight_toRightOf="@id/bg"
                    app:layout_constraintTop_toTopOf="@id/bg">

                    <TextView
                        android:id="@+id/partner_add_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0（人）"
                        android:textColor="#F7AF23"
                        android:textSize="36dp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="店铺"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（数量）"
                            android:textColor="#ffffffff"
                            android:textSize="10dp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </HorizontalScrollView>

</FrameLayout>