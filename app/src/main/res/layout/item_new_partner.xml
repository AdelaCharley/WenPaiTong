<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="13dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#fff09f00"
        android:textSize="14dp"
        android:id="@+id/videoname"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintLeft_toRightOf="@id/image"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成为店铺"
        android:textColor="#fff09f00"
        android:textSize="11dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintLeft_toRightOf="@id/image"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="16dp"/>
    
    <ImageView
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:src="@mipmap/manage_unpartner"
        app:layout_constraintTop_toTopOf="@id/videoname"
        android:layout_marginLeft="10dp"
        android:id="@+id/icon"
        app:layout_constraintBottom_toBottomOf="@id/videoname"
        app:layout_constraintLeft_toRightOf="@id/videoname"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/videoname"
        app:layout_constraintBottom_toBottomOf="@id/videoname"
        android:text="店铺"
        android:background="@drawable/bg_new_partner_text"
        android:layout_marginLeft="6dp"
        android:paddingHorizontal="5dp"
        android:textSize="7dp"
        android:textColor="#ffed9d00"
        app:layout_constraintLeft_toRightOf="@id/icon"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="2020-01-01"
        android:textColor="#ff999999"
        android:textSize="9dp"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image" />

</androidx.constraintlayout.widget.ConstraintLayout>