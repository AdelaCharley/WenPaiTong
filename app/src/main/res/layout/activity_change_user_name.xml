<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".equnshang.activity.ChangeUserNameActivity">

    <include layout="@layout/layout_toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_light"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的昵称"
        android:paddingTop="18dp"
        android:background="@color/white"
        android:textColor="#ff999999"
        android:paddingLeft="18dp"
        android:textSize="12dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的昵称"
            android:maxLength="6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingLeft="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="18dp"
            android:id="@+id/input_mynickname"
            android:textColor="#ff312e2a"
            android:textSize="14dp"
            android:background="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/6"
            app:layout_constraintTop_toTopOf="@id/input_mynickname"
            app:layout_constraintBottom_toBottomOf="@id/input_mynickname"
            android:textColor="#ff312e2a"
            app:layout_constraintRight_toRightOf="@id/input_mynickname"
            android:textSize="14dp"
            android:id="@+id/currentnumber"
            android:layout_marginRight="18dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="11dp"
        android:layout_height="wrap_content"
        android:text="可由中英文、数字、“_”、“-”组成"
        android:textColor="#ff312e2a"
        android:textSize="12dp"
        />

</androidx.appcompat.widget.LinearLayoutCompat>