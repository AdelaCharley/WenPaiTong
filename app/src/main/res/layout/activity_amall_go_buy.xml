<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#fff2f2f2">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/layout_toolbar"
            android:id="@+id/top"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="10dp"
                    android:id="@+id/layout_newaddress"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_radius_white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/top">
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="13.5dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="17.5dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginBottom="26dp"
                        android:src="@mipmap/icon_maps"
                        android:id="@+id/label_icon_new"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择收货地址"
                        android:textSize="14dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/label_icon_new"/>
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/icon_back_right"
                        android:layout_marginRight="18dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_defaultaddress"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_radius_white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="6dp"
                        android:textSize="15dp"
                        android:id="@+id/videoname"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="10dp"
                        android:id="@+id/phone"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="@id/videoname"
                        app:layout_constraintLeft_toRightOf="@id/videoname"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="6dp"
                        android:id="@+id/address"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/phone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/icon_back_right"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginRight="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_radius_white"
                    android:orientation="vertical"
                    android:layout_marginBottom="11.5dp"
                    android:paddingBottom="18dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="21.5dp"
                            android:layout_height="21.5dp"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="20.5dp"
                            android:layout_marginRight="9.5dp"
                            android:id="@+id/dianpu_image"
                            android:layout_marginBottom="20.5dp"/>
                        <TextView
                            android:text=""
                            android:textSize="13dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/store_name"/>
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:id="@+id/store_image"
                            android:layout_marginLeft="17.5dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:layout_width="match_parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constrainedWidth="true"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginRight="15dp"
                            android:text=""
                            android:layout_marginLeft="14dp"
                            android:textSize="13dp"
                            android:textColor="@color/black"
                            android:id="@+id/product_name"
                            app:layout_constraintLeft_toRightOf="@id/store_image"/>

                        <TextView
                            android:id="@+id/sku_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginBottom="8dp"
                            android:text=""
                            android:textSize="12dp"
                            app:layout_constraintTop_toBottomOf="@id/product_name"
                            app:layout_constraintLeft_toRightOf="@id/store_image" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/store_image"
                            android:text=""
                            android:textSize="14dp"
                            android:layout_marginLeft="14dp"
                            android:id="@+id/bigprice"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预售团购价"
                            android:textSize="9dp"
                            android:textColor="@color/blue"
                            android:id="@+id/label_yushoutuangoujia"
                            app:layout_constraintRight_toLeftOf="@id/layout_cutandadd"
                            app:layout_constraintBottom_toTopOf="@id/bigprice"/>

                        <ProgressBar
                            android:id="@+id/group_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginLeft="23.5dp"
                            android:layout_marginBottom="3dp"
                            android:max="10"
                            android:progress="1"
                            android:layout_marginRight="4dp"
                            android:progressDrawable="@drawable/background_progress"
                            app:layout_constraintLeft_toRightOf="@id/store_image"
                            app:layout_constraintTop_toTopOf="@id/label_yushoutuangoujia"
                            app:layout_constraintBottom_toBottomOf="@id/label_yushoutuangoujia"
                            app:layout_constraintRight_toLeftOf="@id/label_yushoutuangoujia"
                            app:layout_constrainedWidth="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥1"
                            android:textColor="@color/blue"
                            android:id="@+id/discountprice"
                            android:textSize="10dp"
                            app:layout_constraintBottom_toTopOf="@id/group_progress"
                            app:layout_constraintLeft_toLeftOf="@id/group_progress"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="34dp"
                            android:id="@+id/layout_cutandadd"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginBottom="15dp"
                            app:layout_constraintBottom_toBottomOf="@id/store_image">
                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="-"
                                android:textSize="16dp"
                                android:background="#fff7f7f7"
                                android:textColor="@color/grey"
                                android:id="@+id/cut"
                                app:layout_constraintRight_toLeftOf="@id/number"
                                app:layout_constraintTop_toTopOf="@id/label_count"
                                app:layout_constraintBottom_toBottomOf="@id/label_count"/>

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:inputType="number"
                                android:id="@+id/number"
                                android:gravity="center"
                                android:background="@null"
                                android:textSize="16dp"
                                app:layout_constraintTop_toTopOf="@id/label_count"
                                app:layout_constraintBottom_toBottomOf="@id/label_count"
                                app:layout_constraintRight_toLeftOf="@id/add"/>


                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:text="+"
                                android:textColor="@color/gray"
                                android:background="#fff7f7f7"
                                android:gravity="center"
                                android:id="@+id/add"
                                android:textSize="16dp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="@id/label_count"
                                app:layout_constraintBottom_toBottomOf="@id/label_count"/>

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_radius_white"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品金额"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12dp"
                            android:textColor="#ff333333"
                            android:id="@+id/total_price"
                            android:layout_marginRight="38dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运费"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="免运费"
                            android:textSize="12dp"
                            android:layout_marginRight="38dp"
                            android:textColor="#ff333333"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--<androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公分"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+256"
                            android:layout_marginRight="38dp"
                            android:id="@+id/work"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工分"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12dp"
                            android:id="@+id/work"
                            android:layout_marginRight="38dp"
                            android:textColor="#ff333333"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_lijian">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="立减"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-0"
                            android:textSize="12dp"
                            android:layout_marginRight="38dp"
                            android:textColor="#ff333333"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_pingtaibutie"
                        android:visibility="gone"
                        tools:visibility="visible">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="平台补贴"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-0"
                            android:id="@+id/butie"
                            android:textSize="12dp"
                            android:layout_marginRight="38dp"
                            android:textColor="#ff333333"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_discount">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠券"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="暂无可用优惠券"
                            android:textSize="12dp"
                            android:textColor="#ff333333"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/label_discount"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:id="@+id/label_discount"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginRight="38dp"
                            android:src="@mipmap/icon_back_right"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_phone"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号"
                            android:id="@+id/label_phone"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="请输入邀请人注册手机(必填)"
                            android:id="@+id/payphone"
                            android:textSize="12dp"
                            android:background="@null"
                            android:maxLength="50"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            app:layout_constraintLeft_toRightOf="@id/label_phone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_confirm_phone"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="确认手机号"
                            android:id="@+id/label_confrim_phone"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="此处再次填写手机号(必填)"
                            android:id="@+id/confirm_phone"
                            android:textSize="12dp"
                            android:background="@null"
                            android:maxLength="50"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            app:layout_constraintLeft_toRightOf="@id/label_confrim_phone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_contactPhone"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号"
                            android:id="@+id/label_contactPhone"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="请输入联系手机(可不填)"
                            android:id="@+id/contactPhone"
                            android:textSize="12dp"
                            android:background="@null"
                            android:maxLength="50"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            app:layout_constraintLeft_toRightOf="@id/label_contactPhone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="备注"
                            android:id="@+id/label5"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="此处填写备注信息"
                            android:id="@+id/remark"
                            android:textSize="12dp"
                            android:background="@null"
                            android:maxLength="50"
                            android:text=""
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
