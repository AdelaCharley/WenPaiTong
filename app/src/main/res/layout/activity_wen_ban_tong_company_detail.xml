    android:layout_height="match_parent"
    android:id="@+id/root"
    android:visibility="gone"
    tools:visibility="visible"
    android:background="#fff2f1f0"
    tools:context=".equnshang.activity.WenBanTongCompanyDetailActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff2f1f0">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:collapsedTitleGravity="top"
                app:contentScrim="#fff2f1f0"
                android:minHeight="30dp"
                app:collapsedTitleTextAppearance="@style/collapsedtextsize"
                app:expandedTitleTextAppearance="@style/expandedtextsize"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff2f1f0"
                    android:minHeight="83dp"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:id="@+id/bg"
                        android:scaleType="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="-34dp"
                        android:id="@+id/layout_info"
                        android:background="@mipmap/image_wenbantong_company_detail_bg"
                        app:layout_constraintTop_toBottomOf="@id/bg"
                        android:layout_marginHorizontal="17dp"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_marginLeft="9dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_width="50dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearance="@style/allcorners_4"
                            android:id="@+id/logo"
                            android:layout_height="50dp"
                            />

                        <TextView
                            android:layout_width="128dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            app:layout_constraintLeft_toRightOf="@id/logo"
                            android:textColor="#ff333333"
                            app:layout_constraintTop_toTopOf="@id/logo"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/name"
                            app:layout_constraintBottom_toBottomOf="@id/logo"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:background="#ffefc982"
                            android:id="@+id/line"
                            app:layout_constraintTop_toTopOf="@id/logo"
                            app:layout_constraintLeft_toRightOf="@id/name"
                            app:layout_constraintBottom_toBottomOf="@id/logo"/>

                        <TextView
                            app:layout_constraintLeft_toRightOf="@id/line"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:layout_marginLeft="9dp"
                            android:textStyle="bold"
                            android:includeFontPadding="false"
                            android:text="联系方式"
                            android:id="@+id/label_contact"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:includeFontPadding="false"
                            app:layout_constraintTop_toBottomOf="@id/label_contact"
                            app:layout_constraintLeft_toLeftOf="@id/label_contact"
                            android:textColor="#ff333333"
                            android:id="@+id/phone"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold"
                            />

