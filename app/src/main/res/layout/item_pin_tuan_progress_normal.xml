<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="18dp"
    android:background="@mipmap/bg_pin_tuan_progress">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            android:src="@mipmap/invite_people_head_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="-10dp"
            android:src="@mipmap/invite_people_head_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/head_left"
            app:layout_constraintTop_toTopOf="@+id/head_left" />

</androidx.constraintlayout.widget.ConstraintLayout>