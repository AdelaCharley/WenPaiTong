<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/amall_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="115dp"
        android:layout_height="115dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16.5dp"
        app:layout_goneMarginTop="22dp"
        android:id="@+id/image_product"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        android:textSize="13dp"
        android:id="@+id/name_product"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:text=""
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/image_product"
        android:layout_marginLeft="16.5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/price"
        android:textSize="14dp"
        android:textColor="@color/text_grey_heavy"
        android:layout_marginLeft="16.5dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="@id/image_product"
        app:layout_constraintLeft_toRightOf="@id/image_product"/>

</androidx.constraintlayout.widget.ConstraintLayout>