<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_radius_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff030303"
            android:textSize="14dp"
            android:id="@+id/label_helplist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="21dp"
            android:text="助力名单"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:text="取消"
            android:textColor="#ff675ef7"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="@id/label_helplist"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_helplist" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <View
        android:layout_width="221dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey"/>
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/grey"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:text="序号"
            android:gravity="center"
            android:textColor="#ff333333"
            android:textSize="11dp"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/grey"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="用户名称"
            android:gravity="center"
            android:textColor="#ff333333"
            android:textSize="11dp"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/grey"/>

        <TextView
            android:layout_width="116dp"
            android:layout_height="25dp"
            android:text="助力时间"
            android:gravity="center"
            android:textColor="#ff333333"
            android:textSize="11dp"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/grey"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="221dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/line_top"
        android:background="@color/grey"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="220dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_height="300dp"
        android:id="@+id/list"
        android:layout_marginBottom="21dp">

    </androidx.recyclerview.widget.RecyclerView>
    
</androidx.appcompat.widget.LinearLayoutCompat>