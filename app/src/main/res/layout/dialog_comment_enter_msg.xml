<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_inputdlg_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:elevation="5dp"
    android:transformPivotY="-5dp"
    android:translationY="5dp"
    android:outlineSpotShadowColor="#595151"
    android:outlineAmbientShadowColor="#595151"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/rl_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_comment_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="@dimen/margin_end_edit_comment"
            android:autofillHints="@string/hint_main_enter_comment"
            android:background="@drawable/et_comment_bg"
            android:hint="@string/hint_main_enter_comment"
            android:inputType="none"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textColor="@color/text_grey"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_comment_send"
            style="@style/Tv.Grey"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="@string/btn_send"
            android:textSize="17dp"
            android:textStyle="bold"/>

    </RelativeLayout>


</LinearLayout>