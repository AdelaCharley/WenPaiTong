<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:fitsSystemWindows="true"
    tools:context=".equnshang.activity.WenBanTongAuthActivity">

    <include layout="@layout/layout_toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".equnshang.activity.WenBanTongAuthActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="身份信息（必填）"
                android:textColor="#ff312e2a"
                android:paddingLeft="15dp"
                android:background="#ffeeeeee"
                android:textSize="12dp"
                android:paddingVertical="11dp"
                android:layout_gravity="left"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您的姓名"
                    android:layout_marginLeft="15dp"
                    android:layout_marginVertical="18dp"
                    android:textColor="#ff312e2a"
                    android:textSize="11dp"
                    />

                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请填写真实姓名"
                    android:textColor="#ffcecece"
                    android:id="@+id/myname"
                    android:textSize="11dp"
                    android:paddingVertical="16dp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="14dp"
                android:background="#ffd9d9d9"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件号码"
                    android:layout_marginLeft="15dp"
                    android:layout_marginVertical="18dp"
                    android:textColor="#ff312e2a"
                    android:textSize="11dp"
                    />

                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请填写正确的身份证号码"
                    android:textColor="#ffcecece"
                    android:id="@+id/myid"
                    android:textSize="11dp"
                    android:paddingVertical="16dp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="14dp"
                android:background="#ffd9d9d9"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffeeeeee">

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件照片（必填）"
                    android:textColor="#ff312e2a"
                    android:paddingLeft="15dp"
                    android:textSize="12dp"
                    android:paddingVertical="11dp"
                    android:layout_gravity="left"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单张小于8M"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#ffe48a1e"
                    android:textSize="12dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:layout_marginTop="20dp">
                <ImageView
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/renmian"
                    android:scaleType="fitXY"
                    app:layout_constraintDimensionRatio="1.58:1"
                    app:layout_constrainedHeight="true"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wenbantong_auth__renmain" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/back"
                    app:layout_constraintDimensionRatio="1.58:1"
                    app:layout_constrainedHeight="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/wenbantong_auth_guohui" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/bg_wenbantong_tijiao_unselected"
                android:paddingHorizontal="17dp"
                android:paddingVertical="13dp"
                android:text="提交"
                android:layout_marginBottom="38dp"
                android:layout_marginHorizontal="13dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>

