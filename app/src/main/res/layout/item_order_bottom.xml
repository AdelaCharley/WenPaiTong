<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@mipmap/workpoint"
        android:layout_marginLeft="16dp"
        android:id="@+id/label2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获得工分"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:id="@+id/get_work_point"
        app:layout_constraintLeft_toRightOf="@id/label2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/desc"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:textColor="@color/text_grey"
        app:layout_constraintLeft_toRightOf="@id/get_work_point"
        app:layout_constraintTop_toTopOf="@id/get_work_point"
        app:layout_constraintBottom_toBottomOf="@id/get_work_point"/>

</androidx.constraintlayout.widget.ConstraintLayout>