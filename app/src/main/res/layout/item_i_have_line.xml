<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    android:layout_marginTop="46dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toTopOf="@id/labelihaveline"
        app:layout_constraintBottom_toBottomOf="@id/labelihaveline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constrainedWidth="true"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toLeftOf="@id/labelihaveline"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="亲，我也是有底线的"
        android:textColor="#CCCCCC"
        android:id="@+id/labelihaveline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="11dp"
        android:layout_marginBottom="34dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toTopOf="@id/labelihaveline"
        app:layout_constraintBottom_toBottomOf="@id/labelihaveline"
        app:layout_constrainedWidth="true"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/labelihaveline"/>

</androidx.constraintlayout.widget.ConstraintLayout>