<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="17.5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/videoname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@id/image"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@id/image"/>

    <TextView
        android:text="00:00:00"
        android:textSize="10dp"
        android:id="@+id/time"
        android:textColor="@color/text_grey_heavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintBottom_toBottomOf="@id/image"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:45:43"
        android:id="@+id/remaintime"
        android:textColor="#ffe00d1c"
        app:layout_constraintTop_toTopOf="@id/time"
        app:layout_constraintBottom_toBottomOf="@id/time"
        app:layout_constraintLeft_toRightOf="@id/time"
        android:textSize="10dp"
        android:layout_marginLeft="3dp"
        />

    <TextView
        android:id="@+id/helpnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="0人为我助力"
        android:textColor="@color/text_grey_heavy"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@id/time"
        app:layout_constraintLeft_toRightOf="@id/time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看助力名单"
        android:textColor="#ff675ef7"
        android:textSize="10dp"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/time"
        android:id="@+id/seelist"/>

    <ImageView
        android:layout_width="49dp"
        android:layout_height="49dp"
        app:layout_constraintTop_toTopOf="@id/videoname"
        app:layout_constraintRight_toRightOf="@id/videoname"
        android:layout_marginTop="8dp"
        android:layout_marginRight="77dp"
        android:id="@+id/status"/>

</androidx.constraintlayout.widget.ConstraintLayout>