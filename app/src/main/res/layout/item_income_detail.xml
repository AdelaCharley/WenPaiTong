<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="33dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单名称订单名称订单附近的空间发看分解掉看的."
        android:textColor="#ff666666"
        android:id="@+id/videoname"
        android:textSize="13dp"
        android:maxLines="1"
        android:maxEms="8"
        android:ellipsize="end"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-01-12 12：45：12"
        android:textColor="#ff999999"
        android:textSize="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/videoname"
        app:layout_constraintLeft_toLeftOf="@id/videoname"
        android:id="@+id/time"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥2.8"
        android:textColor="#ff45a0ff"
        android:textSize="13dp"
        android:id="@+id/price"
        android:layout_marginRight="21dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待结算"
        app:layout_constraintRight_toRightOf="@id/price"
        app:layout_constraintTop_toBottomOf="@id/price"
        android:layout_marginTop="8dp"
        android:textColor="#ff3399ff"
        android:textSize="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥58"
        android:id="@+id/total_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/videoname"
        app:layout_constraintRight_toLeftOf="@id/price"
        android:textColor="#ff666666"
        android:textSize="13dp"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="用户id"
        android:textColor="#ff666666"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/videoname"
        app:layout_constraintRight_toLeftOf="@id/price"
        app:layout_constraintTop_toBottomOf="@id/total_price" />

</androidx.constraintlayout.widget.ConstraintLayout>