<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".equnshang.activity.ProcureActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        android:id="@+id/container"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="7dp"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:src="@mipmap/procureshop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="拼采购商城"
            android:textColor="#ffffffff"
            android:textSize="12dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <include layout="@layout/layout_toolbar"
        android:id="@+id/top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginHorizontal="48dp"
        android:src="@mipmap/click_to_enter_procureshop"
        android:layout_marginTop="30dp"
        android:id="@+id/click_to_enter_procureshop"
        app:layout_constraintTop_toTopOf="@id/layout"/>

    <ImageView
        android:layout_width="144dp"
        android:layout_height="64dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/iknow"
        android:layout_marginTop="30dp"
        android:id="@+id/iknow"
        app:layout_goneMarginTop="68dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/click_to_enter_procureshop"/>

