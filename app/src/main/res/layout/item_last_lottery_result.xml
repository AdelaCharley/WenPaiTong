<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/last_lottery_image_url"
        android:layout_marginTop="18dp"
        android:scaleType="center"
        app:shapeAppearance="@style/allcorners_7"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line_label"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        android:text=""
        app:layout_constraintTop_toTopOf="@id/last_lottery_image_url"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16.5dp"
        android:textColor="@color/text_grey_heavy"
        android:textSize="14dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toRightOf="@id/last_lottery_image_url"
        android:id="@+id/lottery_product_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/last_lottery_time"
        app:layout_constraintLeft_toLeftOf="@id/lottery_product_name"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@id/last_lottery_image_url"/>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tags_one"
        app:layout_constraintLeft_toRightOf="@id/last_lottery_image_url"
        app:layout_constraintTop_toBottomOf="@id/lottery_product_name"
        android:text="1111"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tags_two"
        android:text="222"
        app:layout_constraintTop_toBottomOf="@id/lottery_product_name"
        app:layout_constraintLeft_toRightOf="@id/tags_one"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="333"
        android:id="@+id/tags_three"
        app:layout_constraintTop_toBottomOf="@id/lottery_product_name"
        app:layout_constraintLeft_toRightOf="@id/tags_two"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parians"
        android:text="111"
        app:layout_constraintBottom_toBottomOf="@id/last_lottery_image_url"
        android:layout_marginBottom="4dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="@id/lottery_product_name"/>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status_red"
        android:text="12345"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/parians"/>-->

    <TextView
        android:id="@+id/seelotterydetail"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:text="查  看  中  奖  信  息"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#ff675ef7"
        android:background="@drawable/background_purple_line"
        app:layout_constrainedWidth="true"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/last_lottery_time"
        app:layout_constraintLeft_toLeftOf="@id/lottery_product_name"
        app:layout_constraintRight_toRightOf="@id/lottery_product_name" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:id="@+id/status"
        android:src="@mipmap/weizhongjiang"
        app:layout_constraintTop_toTopOf="@id/last_lottery_image_url"
        android:layout_marginTop="21dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="@id/lottery_product_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/line_label"
        android:layout_marginTop="18dp"
        android:background="@color/grey_light"
        android:layout_marginHorizontal="18dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/last_lottery_image_url"/>

</androidx.constraintlayout.widget.ConstraintLayout>