<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingTop="17dp"
    android:paddingBottom="40dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="25dp">

    <TextView
        android:id="@+id/tv_interact_inform_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_nonsense_title"
        android:textColor="@color/black"/>

        <ImageView
        android:id="@+id/iv_interact_inform_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_interact_inform_title"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/iv_interact_inform_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_interact_inform_head"
        android:layout_alignTop="@id/iv_interact_inform_head"
        android:layout_marginStart="20dp"
        android:text="@string/text_nonsense_sentence"
        android:textSize="13dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/iv_interact_inform_name"
        android:layout_below="@id/iv_interact_inform_name"
        android:layout_marginTop="18dp"
        android:text="@string/text_nonsense_sentence"
        android:textSize="13dp"
        android:textColor="@color/text_grey"/>

</RelativeLayout>