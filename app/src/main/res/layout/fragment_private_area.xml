<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff2f2f2"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top"
            android:background="@drawable/background_radius_white_bottom"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总人数："
                android:layout_marginLeft="16dp"
                android:layout_marginTop="31dp"
                android:textSize="15dp"
                android:textColor="#ff666666"
                android:layout_marginBottom="26dp"
                android:id="@+id/label_mygroupticket"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/label_mygroupticket"
                app:layout_constraintBottom_toBottomOf="@id/label_mygroupticket"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="19dp"
                android:layout_marginLeft="17dp"
                app:layout_constraintLeft_toRightOf="@id/label_mygroupticket"
                android:id="@+id/mygroupticket"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/background_radius_white">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginHorizontal="31dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginBottom="40dp"
                        android:src="@mipmap/fensi_img"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:id="@+id/count_fans"
                        android:textColor="@color/black"
                        android:text="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp"
                        android:text="粉丝"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/background_radius_white">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginHorizontal="31dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginBottom="40dp"
                        android:src="@mipmap/huiyuan_img"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:id="@+id/count_vip"
                        android:textColor="@color/black"
                        android:text="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp"
                        android:text="会员"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background_radius_white"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginHorizontal="31dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginBottom="40dp"
                        android:src="@mipmap/hehuoren_img"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:id="@+id/count_parter"
                        android:textColor="@color/black"
                        android:text="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp"
                        android:text="店铺"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_radius_white">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/img1"
                app:shapeAppearance="@style/topcorners"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/private_area_bg"/>

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@mipmap/private_area_img1"
                app:layout_constraintTop_toTopOf="@id/img1"
                app:layout_constraintBottom_toBottomOf="@id/img1"
                app:layout_constraintLeft_toLeftOf="@id/img1"
                android:layout_marginTop="8.5dp"
                android:layout_marginLeft="24dp"
                android:id="@+id/img2"
                android:layout_marginBottom="5.5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="私域流量池"
                android:layout_marginLeft="13dp"
                app:layout_constraintTop_toTopOf="@id/img2"
                app:layout_constraintBottom_toBottomOf="@id/img2"
                app:layout_constraintLeft_toRightOf="@id/img2"
                android:textColor="#ff090909"
                android:textSize="13dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户基于信任关系通过群票平台专属的链接、二维码、通讯录等分享功能邀请平台外部亲友注册、下载并登录群票APP形成的用户群体，统称为该用户的私域流量池。"
                android:textColor="#ff090909"
                android:id="@+id/text1"
                android:textSize="12dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/img1" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:id="@+id/img3"
                android:src="@mipmap/private_area_img2"
                app:layout_constraintTop_toBottomOf="@id/text1"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="@id/img1"
                android:layout_marginBottom="5.5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="您专属的资源池"
                android:textColor="#ff090909"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@id/img3"
                app:layout_constraintLeft_toRightOf="@id/img3"
                app:layout_constraintTop_toTopOf="@id/img3" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:id="@+id/img4"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@mipmap/private_area_img3"
                app:layout_constraintTop_toBottomOf="@id/img3"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="@id/img1"
                android:layout_marginBottom="19dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="您专属的财富池"
                android:textColor="#ff090909"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@id/img4"
                app:layout_constraintLeft_toRightOf="@id/img4"
                app:layout_constraintTop_toTopOf="@id/img4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:text="群票及使用规则"
            android:id="@+id/groupticketrule"
            android:textColor="#ff3399ff"
            android:textSize="15dp"
            android:layout_marginBottom="28dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>