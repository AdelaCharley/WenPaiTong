<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <include layout="@layout/layout_toolbar"
        android:id="@+id/top"/>

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12.5dp">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#ff999999"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/label1"
                android:layout_height="wrap_content"
                android:text="收货人"/>
            <EditText
                android:hint="请填写收货人姓名"
                android:textSize="12dp"
                android:textColor="#ff333333"
                android:layout_marginLeft="80dp"
                android:background="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/label1"
                app:layout_constraintBottom_toBottomOf="@id/label1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/videoname"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffcccccc"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"/>
        
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="手机号码"/>
            <EditText
                android:hint="请填写收货人手机号"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone"/>
        </LinearLayout>-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12.5dp">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#ff999999"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/label2"
                android:layout_height="wrap_content"
                android:text="手机号码"/>
            <EditText
                android:hint="请填写收货人手机号"
                android:textSize="12dp"
                android:textColor="#ff333333"
                android:layout_marginLeft="80dp"
                android:background="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/label2"
                app:layout_constraintBottom_toBottomOf="@id/label2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffcccccc"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"/>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="所在地区"/>
            <TextView
                android:hint="省市区县，乡镇等"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/site"/>
            <TextView
                android:hint="省市区县，乡镇等"
                android:textSize="22sp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/textsite"/>
        </LinearLayout>-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12.5dp">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#ff999999"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/label3"
                android:layout_height="wrap_content"
                android:text="所在地区"/>
            <TextView
                android:hint="省市区县，乡镇等"
                android:textSize="12dp"
                android:textColor="@color/grey"
                android:layout_marginLeft="80dp"
                android:background="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/label3"
                app:layout_constraintBottom_toBottomOf="@id/label3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/site"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffcccccc"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"/>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="详细地址"/>
            <EditText
                android:hint="街道、楼排等"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail"/>
        </LinearLayout>-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12.5dp">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#ff999999"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/label4"
                android:layout_height="wrap_content"
                android:text="详细地址"/>
            <EditText
                android:hint="街道,楼道等"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constrainedWidth="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/label4"
                app:layout_constraintBottom_toBottomOf="@id/label4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffcccccc"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_radius_white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置默认地址"
                android:id="@+id/store_name"
                android:textSize="12dp"
                android:textColor="#ff333333"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9dp"
                android:textColor="#ff999999"
                android:id="@+id/label5"
                android:layout_marginTop="14dp"
                android:text="提醒：每次下单会默认推荐该地址"
                app:layout_constraintLeft_toLeftOf="@id/store_name"
                app:layout_constraintTop_toBottomOf="@id/store_name"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                app:layout_constraintBottom_toBottomOf="@id/label5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/store_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="取消"
                android:gravity="center"
                android:id="@+id/cancel"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/bg_add_address_cancel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="保存"
                android:id="@+id/save"
                android:textColor="@color/white"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:background="@drawable/bg_add_address_save"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>