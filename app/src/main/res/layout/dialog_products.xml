<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/bg_blue_button"
        android:layout_height="33dp"
        android:text="立即购买"
        android:id="@+id/buynow"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量"
        android:layout_marginLeft="17dp"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:id="@+id/label_count"
        android:layout_marginBottom="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buynow"/>

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="+"
        android:textColor="@color/gray"
        android:background="#fff7f7f7"
        android:gravity="center"
        android:id="@+id/add"
        android:layout_marginRight="17dp"
        android:textSize="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_count"
        app:layout_constraintBottom_toBottomOf="@id/label_count"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:inputType="number"
        android:id="@+id/number"
        android:gravity="center"
        android:background="@null"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@id/label_count"
        app:layout_constraintBottom_toBottomOf="@id/label_count"
        app:layout_constraintRight_toLeftOf="@id/add"/>

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="-"
        android:textSize="16dp"
        android:background="#fff7f7f7"
        android:textColor="@color/grey"
        android:id="@+id/cut"
        app:layout_constraintRight_toLeftOf="@id/number"
        app:layout_constraintTop_toTopOf="@id/label_count"
        app:layout_constraintBottom_toBottomOf="@id/label_count"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/label_line"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cut"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/skus"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@id/label_line"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="颜色"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="13dp"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:id="@+id/userimage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/skus"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="17dp"
        android:id="@+id/image_spec"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/userimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已选：自然黑"
        android:id="@+id/selected"
        android:textColor="@color/grey"
        android:textSize="11dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@id/image_spec"
        app:layout_constraintLeft_toRightOf="@id/image_spec"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="库存"
        android:textColor="@color/grey"
        android:textSize="11dp"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintLeft_toLeftOf="@id/selected"
        app:layout_constraintBottom_toTopOf="@id/selected"
        android:id="@+id/storecount"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥1"
        android:textSize="11dp"
        android:id="@+id/price"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        app:layout_constraintLeft_toLeftOf="@id/selected"
        app:layout_constraintBottom_toTopOf="@id/storecount"/>

    <TextView
        app:layout_constrainedWidth="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:textSize="13dp"
        android:id="@+id/product_name"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/image_spec"
        app:layout_constraintLeft_toRightOf="@id/image_spec"
        app:layout_constraintRight_toLeftOf="@id/close"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@id/product_name"
        android:id="@+id/close"
        android:src="@mipmap/circleclose"/>
