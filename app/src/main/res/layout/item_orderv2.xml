<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:id="@+id/layout"
    android:layout_marginTop="20dp"
    android:background="@drawable/background_radius_white"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号:"
        android:textColor="#ff333333"
        android:textSize="11dp"
        android:id="@+id/ordernum"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"/>

    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="17dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退款"
        android:id="@+id/type_text"
        android:textColor="#fff3594f"
        android:textSize="11dp"
        />

    <View
        android:id="@+id/label_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="17dp"
        app:layout_constraintTop_toBottomOf="@id/ordernum"
        android:background="@color/grey_light"/>

    <com.google.android.material.imageview.ShapeableImageView
        app:layout_constraintTop_toBottomOf="@id/label_line1"
        android:layout_marginLeft="18dp"
        android:layout_width="84dp"
        app:shapeAppearance="@style/allcorners_2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        android:layout_height="84dp"
        android:id="@+id/image"
        />

    <TextView
        android:layout_width="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="17dp"
        android:maxLines="2"
        android:id="@+id/product_name"
        android:ellipsize="end"
        android:layout_marginRight="18dp"
        android:text=""
        android:textColor="#ff1e1e1e"
        android:textSize="13dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="规格：规格1"
        android:textColor="#ff999999"
        android:textSize="13dp"
        android:id="@+id/sku"
        app:layout_constraintRight_toLeftOf="@id/count"
        app:layout_constrainedWidth="true"
        android:layout_marginRight="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintBottom_toBottomOf="@id/image"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sku"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@id/sku"
        android:textColor="#ff999999"
        android:textSize="15dp"
        />

    <View
        android:id="@+id/label_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="17dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:background="@color/grey_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="等待商家处理"
        android:textColor="#ff333333"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginRight="19dp"
        android:id="@+id/status_text"
        app:layout_constraintTop_toBottomOf="@id/label_line2"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:id="@+id/label_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="17dp"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        android:background="@color/grey_light"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="18dp"
        android:id="@+id/layout_operations"
        app:layout_constraintTop_toBottomOf="@id/label_line3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看团详情"
            android:visibility="gone"
            android:id="@+id/seegroupdetail"
            android:layout_marginLeft="17dp"
            android:background="@drawable/bg_item_orderv2_greyline"
            android:paddingHorizontal="21dp"
            android:paddingVertical="8dp"
            android:textColor="#ff1e1e1e"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去邀请"
            android:visibility="gone"
            android:id="@+id/gotoinvite"
            android:layout_marginLeft="17dp"
            android:background="@drawable/bg_item_orderv2_greyline"
            android:paddingHorizontal="21dp"
            android:paddingVertical="8dp"
            android:textColor="#ff1e1e1e"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请退款"
            android:visibility="gone"
            android:id="@+id/applyexchangemoney"
            android:layout_marginLeft="17dp"
            android:background="@drawable/bg_item_orderv2_greyline"
            android:paddingHorizontal="21dp"
            android:paddingVertical="8dp"
            android:textColor="#ff1e1e1e"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看物流"
            android:visibility="gone"
            android:id="@+id/seeexpress"
            android:layout_marginLeft="17dp"
            android:background="@drawable/bg_item_orderv2_greyline"
            android:paddingHorizontal="21dp"
            android:paddingVertical="8dp"
            android:textColor="#ff1e1e1e"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认收货"
            android:id="@+id/confrim"
            android:layout_marginLeft="17dp"
            android:background="@drawable/bg_item_orderv2_greyline"
            android:paddingHorizontal="21dp"
            android:paddingVertical="8dp"
            android:textColor="#ff1e1e1e"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请售后"
            android:visibility="gone"
            android:id="@+id/applyshouhou"
            android:layout_marginLeft="17dp"
            android:background="@drawable/bg_item_orderv2_greyline"
            android:paddingHorizontal="21dp"
            android:paddingVertical="8dp"
            android:textColor="#ff1e1e1e"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再次购买"
            android:visibility="gone"
            android:id="@+id/buyagain"
            android:layout_marginLeft="17dp"
            android:background="@drawable/bg_item_orderv2_greyline"
            android:paddingHorizontal="21dp"
            android:paddingVertical="8dp"
            android:textColor="#ff1e1e1e"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消订单"
            android:id="@+id/cancelorder"
            android:layout_marginLeft="17dp"
            android:background="@drawable/bg_item_orderv2_greyline"
            android:paddingHorizontal="21dp"
            android:paddingVertical="8dp"
            android:textColor="#ff1e1e1e"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去支付"
            android:id="@+id/gopay"
            android:background="@drawable/bg_f3594f_r12_frame"
            android:paddingHorizontal="21dp"
            android:paddingVertical="8dp"
            android:layout_marginLeft="17dp"
            android:textColor="#f3594f"
            android:textSize="13dp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/layout_credit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_operations">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/workpoint"
            android:layout_marginLeft="16dp"
            android:id="@+id/label2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:id="@+id/get_work_point"
            app:layout_constraintLeft_toRightOf="@id/label2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/desc"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:textColor="@color/text_grey"
            android:layout_marginRight="21dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/get_work_point"
            app:layout_constraintTop_toTopOf="@id/get_work_point"
            app:layout_constraintBottom_toBottomOf="@id/get_work_point"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>