<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15.5dp"
        android:layout_marginTop="15.5dp"
        android:layout_marginBottom="15.5dp"
        android:id="@+id/imageview_concern"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/name_concern"
        app:layout_constraintLeft_toRightOf="@+id/imageview_concern"
        app:layout_constraintTop_toTopOf="@id/imageview_concern"
        app:layout_constraintBottom_toBottomOf="@id/imageview_concern"
        android:textColor="@color/black"
        tools:text="附近的空间"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text=""
        android:visibility="gone"
        tools:text="附件打开"
        android:textColor="@color/grey"
        android:id="@+id/time_concern"
        android:layout_marginTop="5.5dp"
        app:layout_constraintLeft_toLeftOf="@id/name_concern"
        app:layout_constraintTop_toBottomOf="@+id/name_concern"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="28dp"
        android:text=""
        android:gravity="center"
        android:textSize="13dp"
        android:layout_marginRight="18.5dp"
        android:background="@drawable/bg_button_grey_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/button_concern"/>

</androidx.constraintlayout.widget.ConstraintLayout>