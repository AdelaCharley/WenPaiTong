<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:gravity="center_horizontal"
    tools:context="com.qunshang.wenpaitong.equnshang.activity.AboutActivity">

    <include layout="@layout/layout_toolbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/image_about_bg"
            android:adjustViewBounds="true"/>

        <com.qunshang.wenpaitong.equnshang.view.RadiuImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:radius="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:id="@+id/logo"
            android:src="@mipmap/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群票"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="1dp"
            android:textColor="#ff0c0c0c"
            android:id="@+id/name"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/versionname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:textColor="#ff0c0c0c"
            android:textSize="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/layoutguanwang"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访问群票官网"
            android:id="@+id/label1"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#ff312e2a"
            android:textSize="14dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.equnshang.com"
            android:textColor="#ff999999"
            android:textSize="11dp"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@id/label1"
            app:layout_constraintTop_toBottomOf="@id/label1"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="9dp"
            android:layout_height="14.5dp"
            android:src="@mipmap/icon_back_right"
            android:layout_marginRight="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/grey_light"
            android:layout_marginHorizontal="17dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群票官方邮箱"
            android:id="@+id/label2"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#ff312e2a"
            android:textSize="14dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mkt@equnshang.com"
            android:textColor="#ff999999"
            android:textSize="11dp"
            android:id="@+id/mail"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@id/label2"
            app:layout_constraintTop_toBottomOf="@id/label2"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="9dp"
            android:layout_height="14.5dp"
            android:src="@mipmap/icon_back_right"
            android:id="@+id/arrow1"
            android:layout_marginRight="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击复制"
            android:paddingVertical="3dp"
            android:id="@+id/fuzhi"
            android:paddingLeft="5dp"
            app:layout_constraintTop_toTopOf="@id/arrow1"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="@id/arrow1"
            app:layout_constraintRight_toLeftOf="@id/arrow1"
            android:textColor="#ff999999"
            android:textSize="14dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:id="@+id/layout_zizhi"
        android:visibility="visible"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginLeft="18dp"
            android:layout_marginVertical="16dp"
            android:textColor="@color/text_grey_heavy"
            android:text="营业执照和平台资质"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="9dp"
            android:layout_height="14.5dp"
            android:src="@mipmap/icon_back_right"
            android:layout_marginRight="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:id="@+id/layout_phone"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服服务热线"
            android:id="@+id/label4"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#ff312e2a"
            android:textSize="14dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/companyphone"
            android:textColor="#ff999999"
            android:textSize="11dp"
            android:id="@+id/phone"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@id/label4"
            app:layout_constraintTop_toBottomOf="@id/label4"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="9dp"
            android:layout_height="14.5dp"
            android:src="@mipmap/icon_back_right"
            android:layout_marginRight="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/grey_light"
            android:layout_marginHorizontal="17dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="42dp"
        android:visibility="gone"
        android:background="@color/grey_light"
        android:layout_marginHorizontal="17dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:id="@+id/layout_checkupdate">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginLeft="18dp"
            android:layout_marginVertical="16dp"
            android:textColor="@color/text_grey_heavy"
            android:text="检测更新"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="9dp"
            android:layout_height="14.5dp"
            android:src="@mipmap/icon_back_right"
            android:layout_marginRight="17dp"
            android:id="@+id/image_label_check_update"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@id/image_label_check_update"
            app:layout_constraintBottom_toBottomOf="@id/image_label_check_update"
            app:layout_constraintRight_toLeftOf="@id/image_label_check_update"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/grey_light"
        android:layout_marginHorizontal="17dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/layout_protocal_pricacy">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginLeft="18dp"
            android:layout_marginVertical="16dp"
            android:textColor="@color/text_grey_heavy"
            android:text="隐私政策"
            android:id="@+id/about"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="9dp"
            android:layout_height="14.5dp"
            android:src="@mipmap/icon_back_right"
            android:layout_marginRight="17dp"
            android:id="@+id/image_label_about"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@id/image_label_about"
            app:layout_constraintBottom_toBottomOf="@id/image_label_about"
            app:layout_constraintRight_toLeftOf="@id/image_label_about"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_light"
        android:layout_marginHorizontal="17dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>