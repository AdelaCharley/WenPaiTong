<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_focus"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/allcorners_2" />

    <TextView
        android:id="@+id/name_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/text_grey_heavy"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@id/image_focus"
        app:layout_constraintTop_toTopOf="@id/image_focus"
        tools:text="Mansway男道男装" />

    <TextView
        android:id="@+id/count_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:textColor="#ff999999"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/image_focus"
        app:layout_constraintTop_toBottomOf="@id/name_focus"
        tools:text="453人关注" />

    <TextView
        android:id="@+id/button_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_store_focus_button_line"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingVertical="7dp"
        android:text="取消关注"
        android:textColor="#ff999999"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/image_focus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_focus" />

