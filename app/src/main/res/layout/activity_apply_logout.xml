<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".equnshang.activity.ApplyLogoutActivity">

    <include layout="@layout/layout_toolbar" android:id="@+id/title"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/line"
        android:background="@color/grey_light"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_width="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="28dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/label1"
        android:text="注销账号后，您的账号将被彻底清除"
        android:textColor="#ff333333"
        android:textSize="16dp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="28dp"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        app:layout_constraintTop_toBottomOf="@id/label1"
        android:background="@drawable/bg_applylogout_text"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1、你将无法再登录、使用该账号。"
            android:textColor="#ff666666"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2、再次使用相同的手机号码进行注册，将会被作为一个全新的用户。"
            android:textColor="#ff666666"
            android:layout_marginTop="20dp"
            android:textSize="13dp"
            android:layout_marginHorizontal="20dp"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="3、账号下的全部使用记录，包括但不限于个人资料、浏览记录、关注的用户、粉丝、发布的内容、点赞记录、收藏记录等数据将被删除且无法被找回。"
            android:textColor="#ff666666"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4、账号下的所有资产和权益，包括但不限于未使用的优惠券、抵用券、会员权益等将被清除且无法恢复。"
            android:textColor="#ff666666"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:textSize="13dp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        android:layout_marginHorizontal="30dp"
        android:text="提交注销申请后，系统将会在3- -5个工作日内给予处理，请耐心等待处理结果。"
        android:textColor="#ff999999"
        android:textSize="11sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="确认注销"
        android:id="@+id/logoutnow"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_apply_logout_now"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>