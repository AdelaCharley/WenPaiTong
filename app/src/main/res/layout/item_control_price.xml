<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/amall_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16.5dp"
        android:id="@+id/image_product"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16.5dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:id="@+id/name_product"
        android:maxLines="2"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:text=""
        android:layout_marginTop="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintLeft_toRightOf="@id/image_product"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/price_product"
        android:text="￥199.0"
        android:textColor="@color/blue"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/image_product"
        app:layout_constraintBottom_toTopOf="@id/preprice"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"
        android:id="@+id/preprice"
        android:background="@drawable/bg_blue"
        android:textColor="@color/blue"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:textSize="10dp"
        android:paddingRight="6dp"
        app:layout_constraintLeft_toRightOf="@id/image_product"
        app:layout_constraintTop_toTopOf="@id/monthcount"
        app:layout_constraintBottom_toBottomOf="@id/monthcount"
        android:text="预估最低到手价￥72"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monthcount"
        android:textSize="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/image_product"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:text="月销量0件"/>

</androidx.constraintlayout.widget.ConstraintLayout>