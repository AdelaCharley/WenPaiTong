<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".equnshang.fragment.CollegeShare_OneFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/root"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearance="@style/allcorners_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/bg"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constrainedWidth="true"
            android:adjustViewBounds="true"
            android:src="@mipmap/image_share_college_bg_two"/>

        <ImageView
            android:layout_width="129dp"
            android:layout_height="42dp"
            android:src="@mipmap/image_logo_college_two"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:id="@+id/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:id="@+id/layout"
            android:layout_marginHorizontal="28dp"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/image_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@mipmap/bg_college_share_kuangkuang"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/image_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constrainedWidth="true"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/layout1"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="42dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="19.5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constrainedWidth="true"
                    android:layout_marginRight="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/bg_wenbantong_five_usericons"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:src="@mipmap/ic_launcher"
                    android:layout_margin="1dp"
                    android:id="@+id/circleimage"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您的群票好友"
                    android:textColor="#ffa24b4e"
                    android:textSize="8.5dp"
                    android:textStyle="bold"
                    android:id="@+id/username"
                    app:layout_constraintTop_toTopOf="@id/circleimage"
                    app:layout_constraintBottom_toBottomOf="@id/circleimage"
                    app:layout_constraintLeft_toRightOf="@id/circleimage"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="0dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐了一篇资讯给你"
                    android:textColor="#ffa24b4e"
                    android:textSize="8.5dp"
                    android:layout_marginLeft="7dp"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@id/circleimage"
                    app:layout_constraintLeft_toRightOf="@id/username"
                    android:layout_marginRight="9dp"
                    app:layout_constraintBottom_toBottomOf="@id/circleimage"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="政策大数据 | “数字产业化、产业数字化到底是什么？"
                android:id="@+id/title"
                android:layout_marginHorizontal="32dp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textStyle="bold"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@id/layout1"
                android:textColor="@color/white"
                android:textSize="13.5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="“数字产业化”“产业数字化”多次出现在今年的政府工作报告和《中华人民共和国国民经济和社会发展第十四个..."
                android:textColor="@color/white"
                android:textSize="10.5dp"
                android:layout_marginTop="22.5dp"
                android:layout_marginHorizontal="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/subtitle"
                app:layout_constraintTop_toBottomOf="@id/title"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="57dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="57dp"
            android:layout_marginTop="13.5dp"
            android:id="@+id/image_qrcode"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toBottomOf="@id/layout"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长按识别二维码进入群票"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="9dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_qrcode"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>