<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="17dp"
        app:shapeAppearance="@style/allcorners_7"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/image_focus"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text=""
        android:id="@+id/name_focus"
        android:textColor="@color/text_grey_heavy"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="@id/image_focus"
        app:layout_constraintLeft_toRightOf="@id/image_focus"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text=""
        android:textColor="#ff999999"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:id="@+id/count_focus"
        app:layout_constraintLeft_toRightOf="@id/image_focus"
        app:layout_constraintTop_toBottomOf="@id/name_focus"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:textSize="12dp"
        android:text="取消关注"
        android:textColor="#ff999999"
        android:gravity="center"
        android:layout_marginRight="17dp"
        android:background="@drawable/bg_store_focus_button_line"
        android:id="@+id/button_focus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_focus"
        app:layout_constraintBottom_toBottomOf="@id/image_focus"/>

</androidx.constraintlayout.widget.ConstraintLayout>